mixin romThumb(name, category, img, ar)
  a(href='#').r-thumb
    .r-thumb__image.scaler(data-ar=ar ? "" : "1:1" style="padding-bottom: "+ (ar)*100 +"%; background-image: url(https://res.cloudinary.com/dqruxbmfq/image/upload/w_64,c_fill,e_pixelate:5/v1554915617/pixelroms/" + img + ".jpg)")
      img(js-lazy data-src='img/thumbs/' + img + '.jpg' data-srcset='img/thumbs/' + img + '@2x.jpg 2x')
    .r-thumb__category!= category
    .r-thumb__name!= name
